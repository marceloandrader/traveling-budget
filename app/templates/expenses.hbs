<h1>Expenses</h1>

{{outlet}}
<hr>
{{#link-to 'expenses.new'}}New expense{{/link-to}}
<a href="#" {{action 'refresh'}}>Refrescar</a>

<ul>
  {{#each expenses as |category|}}
  <li>
    <strong>{{category.value}}</strong>

    <ul>
      <li style="font-weight: bold;">Total: {{total-expenses category.items}}</li>
      <li style="font-weight: bold;">Budget: {{budget-for category.value categories}}</li>
    {{#each category.items as |exp|}}
      <li>
        {{exp.value}} USD <em style="font-size: 0.8em">{{exp.description}}</em>
        {{link-to 'Editar' 'expenses.edit' exp}}
        <a href="#" {{action 'remove' exp}}>Eliminar</a>
        <br>
        <span class="small">{{exp.createdOn}}</span>
      </li>
    {{/each}}
    </ul>

  </li>
  {{/each}}
</ul>

